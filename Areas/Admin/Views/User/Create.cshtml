@using IdentityProject.Areas.Admin.Models.User
@model UserCreateVM

<form asp-action="Create" asp-controller="User" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group first">
        <input asp-for="Email" class="form-control" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group last mb-4">
        <input asp-for="Password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group last mb-4">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group last mb-4">
        <input asp-for="Country" class="form-control" placeholder="Country">
        <span asp-validation-for="Country"></span>
    </div>
    <div class="form-group last mb-4">
        <input asp-for="City" class="form-control" placeholder="City">
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group last mb-4">
        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group last mb-4">
        <select asp-for="RoleIds" asp-items="@Model.Roles" class="form-select" multiple></select>
        <span asp-validation-for="RoleIds"></span>
    </div>

    <button type="submit" class="btn text-white btn-block btn-primary mt-3">Register</button>
</form>
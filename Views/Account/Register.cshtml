@using IdentityProject.Models.Account
@model AccountRegisterVM

@{
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="mb-4">
            <h3>Register</h3>
            <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
        </div>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group first">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="Country" class="form-control" placeholder="Country">
                <span asp-validation-for="Country"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="City" class="form-control" placeholder="City">
                <span asp-validation-for="City"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="d-flex mb-3 align-items-center">
                <label class="control control--checkbox mb-0">
                    <span class="caption">Remember me</span>
                    <input type="checkbox" checked="checked" />
                    <div class="control__indicator"></div>
                </label>
                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>

            </div>
            <div class="d-flex justify-content-center">
                <a asp-controller="Account" asp-action="Login" class="forgot-pass">Already have an account? Login</a>
            </div>
            <button type="submit" class="btn text-white btn-block btn-primary mt-3">Register</button>

            <span class="d-block text-left my-4 text-muted"> or sign in with</span>

            <div class="social-login">
                <a href="#" class="facebook">
                    <span class="icon-facebook mr-3"></span>
                </a>
                <a href="#" class="twitter">
                    <span class="icon-twitter mr-3"></span>
                </a>
                <a href="#" class="google">
                    <span class="icon-google mr-3"></span>
                </a>
            </div>
        </form>
    </div>
</div>





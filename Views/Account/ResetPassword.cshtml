@using IdentityProject.Models.Account
@model AccountResetPasswordVM

@{
    Layout = "_Layout";
    var email = Context.Request.Query["email"];
    var token = Context.Request.Query["token"];
}
    
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="mb-4">
            <h3>Reset Password</h3>
            <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
        </div>
        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input value="@email" type="hidden" asp-for="Email" />
            <input value="@token" type="hidden" asp-for="Token" />

            <div class="form-group last mb-4">
                <input asp-for="NewPassword" class="form-control" placeholder="Password">
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-group last mb-4">
                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmNewPassword"></span>
            </div>
            <button type="submit" class="btn text-white btn-block btn-primary mt-3">Reset password</button>
        </form>
    </div>
</div>





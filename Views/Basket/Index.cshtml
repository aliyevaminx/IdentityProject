@using IdentityProject.Models.Basket
@model BasketIndexVM

@if (Model.BasketProducts.Count > 0)
{
    <section class="h-100 gradient-custom">
        <div class="container py-5">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8">
                  
                            <div class="card mb-4">
                                <div class="card-header py-3">
                                    <h5 class="mb-0">Cart - @Model.BasketProducts.Count items</h5>
                                </div>
                                <div class="card-body">
                            @foreach (var basketProduct in Model.BasketProducts)
                            {
                                    <!-- Single item -->
                                    <div class="row">
                                        <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                            <!-- Image -->
                                            <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                                    <img src="~/main-assets/img/@basketProduct.Product.Photo"
                                                class="w-100"/>
                                                <a href="#!">
                                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                                </a>
                                            </div>
                                            <!-- Image -->
                                        </div>

                                        <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                            <!-- Data -->
                                            <p><strong>@basketProduct.Product.Title</strong></p>
                                            <p>Size: @basketProduct.Product.Size</p>
                                            <button data-id="@basketProduct.Id" type="button" class="deleteProduct btn btn-primary btn-sm me-1 mb-2" title="Remove item">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm mb-2" title="Move to the wish list">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                            <!-- Data -->
                                        </div>

                                        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                            <!-- Quantity -->
                                            <div class="d-flex mb-4" style="max-width: 300px">
                                                    <button data-id="@basketProduct.Id" class="decreaseCount btn btn-success px-3 me-2">
                                                        <i class="fas fa-minus"></i>
                                                    </button>

                                                    <input id="quantity" value="@basketProduct.Count" class="form-control"/>

                                                    <button data-id="@basketProduct.Id" class="increaseCount btn btn-success px-3 ms-2">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                            </div>
                                            <!-- Quantity -->
                                            <!-- Price -->
                                            <p class="text-start text-md-center">
                                                <strong>$@basketProduct.Product.Price</strong>
                                            </p>
                                            <!-- Price -->
                                        </div>
                                    <hr class="my-4" />
                                    </div>
                                    <!-- Single item -->

                            }
                                </div>
                            </div>
              
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <p><strong>We accept</strong></p>
                            <img class="me-2" width="45px"
                                 src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                                 alt="Visa" />
                            <img class="me-2" width="45px"
                                 src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                                 alt="American Express" />
                            <img class="me-2" width="45px"
                                 src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                                 alt="Mastercard" />
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">

                                @foreach (var basketProduct in Model.BasketProducts)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                        <div><strong>@basketProduct.Product.Title</strong></div>
                                        <span id="totalAmountForProduct-@basketProduct.Id">
                                            @{
                                                var totalAmountForProduct = basketProduct.Product.Price * basketProduct.Count;
                                            }
                                            $@totalAmountForProduct
                                        </span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span id="totalAmount"><strong>
                                          $@Model.BasketProducts.Sum(bp => bp.Count * bp.Product.Price)
                                    </strong></span>
                                </li>
                            </ul>

                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-lg btn-block">
                                Go to checkout
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <p>Product not added</p>
}

@section Scripts {
    <script src="/main-assets/js/basket.js"></script>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        var stripe = Stripe('@ViewBag.PublishableKey');

        var checkoutButton = document.getElementById('checkout-button');

        checkoutButton.addEventListener('click', function () {
            fetch('/payment/pay', {
                method: 'POST',
            })
                .then(function (response) {
                    return response.json();
                })
                .then(function (sessionId) {
                    return stripe.redirectToCheckout({ sessionId: sessionId.id });
                })
                .then(function (result) {
                    if (result.error) {
                        alert(result.error.message);
                    }
                })
                .catch(function (error) {
                    console.error('Error:', error);
                });
        });
    </script>
}